{
    "_comment": "https://docs.aws.amazon.com/AmazonECS/latest/developerguide/task_definition_parameters.html",
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "new4303/multi-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "server",
            "image": "new4303/multi-server",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "worker",
            "image": "new4303/multi-worker",
            "hostname": "worker",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "new4303/multi-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["client", "server"]
        }
    ]
}